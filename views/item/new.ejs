<%- include('../partials/header.ejs')%>
    <main>
        <form action = '/items' method = 'POST' enctype="multipart/form-data" class="form">
            <h1>Sell At Jersey Jungle</h1>
            <p>Complete this quick form</p>
            <label for="condition">Condition</label>
            <select id="condition" name="condition" required>
                <option value=""></option>
                <option value="New">New</option>
                <option value="Like New">Like New</option>
                <option value="Good">Good</option>
                <option value="Lightly Worn">Lightly Worn</option>
                <option value="Used">Used</option>
            </select>

            <label>Title</label>
            <input type="text" name="title" required>

            <label>Price</label>
            <input type="number" name="price" min="0.01" step="0.01" required>

            <label>Details</label>
            <textarea type="text" name="details" minlength="10" required></textarea>

            <label>Image</label>
            <input type="file" name="image" accept=".png, .jpg, .jpeg, .webp" required>

            <input type="submit" value="SUBMIT">
        </form>
    </main>
<%- include('../partials/footer.ejs')%>