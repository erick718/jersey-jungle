<%- include('../partials/header.ejs')%>
    <main>
        <form method = "POST" action = "/items/<%= item._id%>?_method=PUT" enctype="multipart/form-data" class="form">
            <h1>Sell At Jersey Jungle</h1>
            <p>Complete this quick form</p>
            <label for="condition">Condition</label>
            <select id="condition" name="condition" required>
                <option value="" <%= !item.condition ? 'selected' : '' %>></option>
                <option value="New" <%= item.condition === 'New' ? 'selected' : '' %>>New</option>
                <option value="Like New" <%= item.condition === 'Like New' ? 'selected' : '' %>>Like New</option>
                <option value="Good" <%= item.condition === 'Good' ? 'selected' : '' %>>Good</option>
                <option value="Lightly Worn" <%= item.condition === 'Lightly Worn' ? 'selected' : '' %>>Lightly Worn</option>
                <option value="Used" <%= item.condition === 'Used' ? 'selected' : '' %>>Used</option>
            </select>

            <label for="title">Title</label>
            <input type="text" name="title" value="<%= item.title%>" required>

            <label for="seller">Seller</label>
            <input type="text" name="seller" value="<%= item.seller%>" required>

            <label for="price">Price</label>
            <input type="number" name="price" value="<%= item.price%>" required>

            <label for="details">Details</label>
            <textarea type="text" name="details" required><%= item.details%></textarea>

            <label for="image">Image</label>
            <input type="file" name="image" accept=".png, .jpg, .jpeg, .webp">

            <input type="submit" value="Submit">
        </form>
    </main>
<%- include('../partials/footer.ejs')%>